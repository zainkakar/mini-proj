- if notice.present?
  .alert.alert-success{role: "alert"}= notice
.col-xs-12.col.md-12
  .card

    .header
      %h4.title Teacher
      %hr

    .content
      .row
        .col-md-6.col-xs-12
          %table.table
            %tr
              %th Image
              %td= image_tag @teacher.image, size: '150x150'
            %tr
              %th Name
              %td= @teacher.name
            %tr
              %th Gender
              %td= @teacher.gender
            %tr
              %th Date of Birth
              %td= @teacher.dob
            %tr
              %th Phone
              %td= @teacher.phone
            %tr
              %th Email
              %td= @teacher.email
            %tr
              %th Address
              %td= @teacher.address
        .col-md-6.col-xs-12
          %input#lat-value{value: @teacher.lat, type: 'hidden'}
          %input#long-value{value: @teacher.long, type: 'hidden'}
          #show-teacher-map

    .footer
      = link_to teachers_path, class: 'btn btn-default' do
        %i.fa.fa-chevron-left
        Back
      = link_to edit_teacher_path(@teacher), class: 'btn btn-primary btn-fill' do
        %i.fa.fa-edit
        Edit
    %br
