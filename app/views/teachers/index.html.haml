.col-xs-12.col.md-12
  .card

    .header
      %h4.title
        %i.pe-7s-users
        Listing Teachers
      %hr
      = link_to new_teacher_path, class: 'btn btn-primary btn-fill' do
        %i.fa.fa-plus-square
        New Teacher
      %br
      %br

    .content.table-responsive.table-full-width
      %table.table.table-hover.table-striped
        %thead
          %tr
            %th Name
            %th Gender
            %th Phone
            %th Address
            %th Actions

        %tbody
          - @teachers.each do |teacher|
            %tr
              %td= teacher.name
              %td= teacher.gender
              %td= teacher.phone
              %td= teacher.address
              %td
                = link_to teacher, class: 'btn btn-info btn-sm' do
                  %i.fa.fa-eye
                  Show
                = link_to edit_teacher_path(teacher), class: 'btn btn-primary btn-sm' do
                  %i.fa.fa-edit
                  Edit
                = link_to teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do
                  %i.fa.fa-trash
                  Delete
    %br
