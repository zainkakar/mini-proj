.col-xs-12.col.md-12
  .card

    .header
      %h4.title
        %i.pe-7s-users
        Listing Parents
      %hr
      = link_to new_parent_path, class: 'btn btn-primary btn-fill' do
        %i.fa.fa-plus-square
        New Parent
      %br
      %br

    .content.table-responsive.table-full-width
      %table.table.table-hover.table-striped
        %thead
          %tr
            %th Name
            %th Gender
            %th Phone
            %th Address
            %th Actions

        %tbody
          - @parents.each do |parent|
            %tr
              %td= parent.name
              %td= parent.gender
              %td= parent.phone
              %td= parent.address
              %td
                = link_to parent, class: 'btn btn-info btn-sm' do
                  %i.fa.fa-eye
                  Show
                = link_to edit_parent_path(parent), class: 'btn btn-primary btn-sm' do
                  %i.fa.fa-edit
                  Edit
                = link_to parent, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do
                  %i.fa.fa-trash
                  Delete
    %br
