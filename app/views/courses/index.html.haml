.col-xs-12.col.md-12
  .card

    .header
      %h4.title
        %i.pe-7s-ribbon
        Listing Courses
      %hr
      = link_to new_course_path, class: 'btn btn-primary btn-fill' do
        %i.fa.fa-plus-square
        New Course
      %br
      %br

    .content.table-responsive.table-full-width
      %table.table.table-hover.table-striped
        %thead
          %tr
            %th Name
            %th Description
            %th Grade
            %th Actions

        %tbody
          - @courses.each do |course|
            %tr
              %td= course.name
              %td= course.description
              %td= course.grade.name
              %td
                = link_to course, class: 'btn btn-info btn-sm' do
                  %i.fa.fa-eye
                  Show
                = link_to edit_course_path(course), class: 'btn btn-primary btn-sm' do
                  %i.fa.fa-edit
                  Edit
                = link_to course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do
                  %i.fa.fa-trash
                  Delete
    %br

