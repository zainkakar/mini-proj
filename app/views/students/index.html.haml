.col-xs-12.col.md-12
  .card

    .header
      %h4.title
        %i.pe-7s-users
        Listing Students
      %hr
      = link_to new_student_path, class: 'btn btn-primary btn-fill' do
        %i.fa.fa-plus-square
        New Student
      %br
      %br

    .content.table-responsive.table-full-width
      %table.table.table-hover.table-striped
        %thead
          %tr
            %th Name
            %th Gender
            %th Phone
            %th Address
            %th Actions

        %tbody
          - @students.each do |student|
            %tr
              %td= student.name
              %td= student.gender
              %td= student.phone
              %td= student.address
              %td
                = link_to student, class: 'btn btn-info btn-sm' do
                  %i.fa.fa-eye
                  Show
                = link_to edit_student_path(student), class: 'btn btn-primary btn-sm' do
                  %i.fa.fa-edit
                  Edit
                = link_to student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do
                  %i.fa.fa-trash
                  Delete
    %br
