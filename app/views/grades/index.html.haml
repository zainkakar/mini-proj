.col-xs-12.col.md-12
  .card

    .header
      %h4.title
        %i.pe-7s-users
        Listing Grades
      %hr
      = link_to new_grade_path, class: 'btn btn-primary btn-fill' do
        %i.fa.fa-plus-square
        New Grade
      %br
      %br

    .content.table-responsive.table-full-width
      %table.table.table-hover.table-striped
        %thead
          %tr
            %th Name
            %th Description
            %th 

        %tbody
          - @grades.each do |grade|
            %tr
              %td= grade.name
              %td= grade.description
              %td
                = link_to grade, class: 'btn btn-info btn-sm' do
                  %i.fa.fa-eye
                  Show
                = link_to edit_grade_path(grade), class: 'btn btn-primary btn-sm' do
                  %i.fa.fa-edit
                  Edit
                = link_to grade, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do
                  %i.fa.fa-trash
                  Delete
    %br
