.col-xs-12.col.md-12
  .card

    .header
      %h4.title
        %i.pe-7s-note2
        Listing Exam
      %hr
      = link_to new_exam_path, class: 'btn btn-primary btn-fill' do
        %i.fa.fa-plus-square
        New Exam
      %br
      %br

    .content.table-responsive.table-full-width
      %table.table.table-hover.table-striped
        %thead
          %tr
            %th Name
            %th Start date
            %th Exam category
            %th Actions

        %tbody
          - @exams.each do |exam|
            %tr
              %td= exam.name
              %td= exam.start_date
              %td= exam.exam_category.name
              %td
                = link_to exam, class: 'btn btn-info btn-sm' do
                  %i.fa.fa-eye
                  Show
                = link_to edit_exam_path(exam), class: 'btn btn-primary btn-sm' do
                  %i.fa.fa-edit
                  Edit
                = link_to exam, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do
                  %i.fa.fa-trash
                  Delete
    %br

